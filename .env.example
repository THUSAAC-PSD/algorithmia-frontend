# API Configuration
# Base URL for the backend API
VITE_API_BASE_URL=http://localhost:9090/api/v1

# API host (used for CSP and WebSocket)
VITE_API_HOST=localhost:9090

# WebSocket URL
VITE_WS_URL=ws://localhost:9090

# Email Verification
# Set to 'true' to require email verification during signup
# Set to 'false' for development mode (backend will return verification code directly)
REQUIRE_EMAIL_VERIFICATION=false

# For production, use:
# VITE_API_BASE_URL=https://your-production-domain.com/api/v1
# VITE_API_HOST=your-production-domain.com
# VITE_WS_URL=wss://your-production-domain.com
# REQUIRE_EMAIL_VERIFICATION=true
